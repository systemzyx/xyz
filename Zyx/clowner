local targetName = {"Klutzap", "Maylovexdlolboy"}
local Players = game:GetService("Players")

local function clown(p)
    local function apply(char)
        local h = char:WaitForChild("Head")
        if h:FindFirstChild("ShameBillboard") then h.ShameBillboard:Destroy() end
        local b = Instance.new("BillboardGui")
        b.Name = "ShameBillboard"
        b.Size = UDim2.new(0, 250, 0, 90)
        b.StudsOffset = Vector3.new(0, 4, 0)
        b.AlwaysOnTop = true
        b.Parent = h
        local main = Instance.new("TextLabel")
        main.Size = UDim2.new(1, 0, 0.7, 0)
        main.Position = UDim2.new(0, 0, 0, 0)
        main.BackgroundTransparency = 1
        main.Text = "CLOWNðŸ¤¡"
        main.TextColor3 = Color3.fromRGB(255,0,0)
        main.TextStrokeTransparency = 0
        main.TextScaled = true
        main.Font = Enum.Font.GothamBlack
        main.Parent = b
        local sub = Instance.new("TextLabel")
        sub.Size = UDim2.new(1, 0, 0.3, 0)
        sub.Position = UDim2.new(0, 0, 0.7, 0)
        sub.BackgroundTransparency = 1
        sub.Text = "Please clown on him, crash him, Abuse him"
        sub.TextColor3 = Color3.fromRGB(255,0,0)
        sub.TextStrokeTransparency = 0
        sub.TextScaled = true
        sub.Font = Enum.Font.Gotham
        sub.Parent = b
    end
    if p.Character then
        apply(p.Character)
    end
    p.CharacterAdded:Connect(apply)
end

local t = Players:FindFirstChild(targetName)
if t then clown(t) end

Players.PlayerAdded:Connect(function(p)
    if p.Name == targetName then clown(p) end
end)
